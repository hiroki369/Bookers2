
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
</head>
<body>

  <h2>User info</h1><br>
  	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
<table>
    <tbody>
        <tr>
            <th>name</th>
            <th><%= user.name %></th>
        </tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
    </tbody>
</table>

<h2> <%= link_to "Edit", edit_user_path(current_user) %> </h2>

<h1>New Book</h1>

<%= form_for(book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %>

<% end %>
</html>



