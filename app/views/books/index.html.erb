<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
</head>

<%= render 'users/userinfo',user: @user,book: @book %>


<table>

<thead>
<% @books.each do |book| %>


  <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>

</thead>
<tbody>
  <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
		<td><%= book.title %></td>
    <td><%= book.body %></td>
  </tr>


<% end %>

  </tbody>
</table>



