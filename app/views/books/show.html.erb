<%= notice %>

<%= render 'error', book: @book %>
<%= render 'users/userinfo',user: @book.user,book: @book %>

<h1>Book detail</h1>


<h2><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></h2>
<h2><%= @book.user.name %></h2>
<h2><%= @book.title %></h2>
<h2><%= @book.body %></h1>


<% if @book.user == current_user %>
<%= link_to "Edit", edit_book_path(@book) %>
<%= link_to "Destroy", book_path(@book) , method: :delete, data: { confirm: '本当に消しますか？'} %>
<% end %>